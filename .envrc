# Enable direnv standard helpers

if command -v op >/dev/null 2>&1; then
  if op account list >/dev/null 2>&1; then
    export ANTHROPIC_API_KEY="${ANTHROPIC_API_KEY:-$(op read "op://YOUR_VAULT/Anthropic/api_key" 2>/dev/null)}"
    export OPENAI_API_KEY="${OPENAI_API_KEY:-$(op read "op://YOUR_VAULT/OpenAI/api_key" 2>/dev/null)}"
    export TAVILY_API_KEY="${TAVILY_API_KEY:-$(op read "op://YOUR_VAULT/Tavily/api_key" 2>/dev/null)}"
    export LANGSMITH_API_KEY="${LANGSMITH_API_KEY:-$(op read "op://YOUR_VAULT/LangSmith/api_key" 2>/dev/null)}"
  else
    echo "direnv: 1Password CLI not signed in. Run 'op account add' to configure." >&2
  fi
else
  echo "direnv: 1Password CLI not available. Install 1password-cli or set env vars manually." >&2
fi

export LANGSMITH_TRACING="true"
export LANGSMITH_PROJECT="deepagents-research"
